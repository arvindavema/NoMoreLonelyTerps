<%= simple_form_for room_msg, remote: true do |form| %>
  <div class="input-group mb-3">
    <%= form.input :msg, as: :string, wrapper: false,label: false, input_html: {class: 'chat-input'} %>
    <div class="input-group-append">
       <%= form.submit "Send", input_html: {class: 'btn btn-primary chat-input'}  %>
    </div>
  </div>
  <%= form.input :user_id, as: :hidden %>
  <%= form.input :room_id, as: :hidden %>
<% end %>
