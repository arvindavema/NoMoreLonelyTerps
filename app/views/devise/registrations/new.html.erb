
<div class="container d-flex justify-content-center">

  <div class="card card-themed text-white shadow-lg align-middle rounded m-5 p-3">

    <div class="card-body text-center mt-3">

      <h1 class="card-title display-6 lead text-center text-white mt-3"> Sign Up </h1>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <p> <%= render "devise/shared/error_messages", resource: resource %> </p>

        <div class="form-group mt-3 text-center">
          <%= f.text_field :user_name, autofocus: true, autocomplete: "username" , class: "form-control", placeholder: "username", id: "user_name"%>
        </div>

        <div class="form-group mt-3 text-center">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control", placeholder: "email", id: "email"%>
        </div>

        <div class="form-group mt-3 text-center">
          <%= f.password_field :password, autocomplete: "new-password" , class: "form-control" , placeholder: "password (minimum 6 characters)", id: "password"%>
        </div>

        <div class="form-group mt-3 text-center">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" , placeholder: "confirm password", id: "password_confirmation" %>
        </div>
        <div class="form-group mt-3 text-center">
          <%= form.file_field :avatar %>
        </div>
        <button type="submit" class="btn btn-outline-light text-center mt-3">Sign Up!</button>
        <% end %>
      </div>
    </div>

  </div>
