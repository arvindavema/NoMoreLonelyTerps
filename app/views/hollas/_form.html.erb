
<%= form_with(model: [current_user, current_user.hollas.build],local: true) do |f| %>

  <div class="form-group">
    <%= f.text_area :body , class: 'form-control mt-3' %>
  </div>
  <div class="form-group">
    <%= f.file_field :image, class: 'form-control mt-3'%>
  </div>
  <button type="submit" class="btn btn-primary text-center mt-3">Holla!</button>
<% end %>
